<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.loltournamentplanner.controller.MatchDetailsController" stylesheets="@styles.css" styleClass="app-root">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>

    <top>
        <VBox spacing="6.0">
            <Label fx:id="matchTitleLabel" text="Match" styleClass="title"/>
            <Label fx:id="matchMetaLabel" text="" styleClass="subtitle"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="8.0" styleClass="card">
            <Label text="Players" styleClass="card-title"/>
            <ListView fx:id="participantsListView" VBox.vgrow="ALWAYS" styleClass="list-view"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" text="Close" onAction="#onClose" styleClass="secondary-button"/>
        </HBox>
    </bottom>
</BorderPane>
